{{#if model.peopleSameAgeAsDogYears}}
  <table class="people">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Pets</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.peopleSameAgeAsDogYears as |person|}}
        <tr>
          <td>{{person.firstName}}</td>
          <td>{{person.lastName}}</td>
          <td class="people-age">{{person.age}}</td>
          <td>
            <ul>
              {{#each person.pets as |pet|}}
                <li>
                  {{pet.name}}, <span class="people-pet-age">{{pet.age}}</span>
                </li>
              {{/each}}
            </ul>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}
